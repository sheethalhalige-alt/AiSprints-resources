{
	"name": "quizmaker-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"dev:next": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:migrate:local": "wrangler d1 migrations apply quizmaker-app-database --local",
		"db:migrate:list": "wrangler d1 migrations list quizmaker-app-database --local"
	},
	"dependencies": {
		"@cloudflare/next-on-pages": "^1.13.5",
		"@opennextjs/cloudflare": "^1.14.4",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-radio-group": "^1.2.3",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.13",
		"bcryptjs": "^2.4.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.561.0",
		"next": "15.5.9",
		"next-themes": "^0.4.6",
		"react": "19.1.4",
		"react-dom": "19.1.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.19.27",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"vitest": "^2.1.8",
		"wrangler": "^4.54.0"
	}
}
